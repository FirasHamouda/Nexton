<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="15dp"
    android:background="@color/black"
    app:cardElevation="10dp">


    <RelativeLayout
        android:id="@+id/recycler_view_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img_episode"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/title_shape"
            android:layout_below="@+id/img_episode">

            <TextView
                android:id="@+id/num_episode_indice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:lines="1"
                android:text="@string/episode"
                android:layout_margin="7dp"/>

            <TextView
                android:id="@+id/num_episode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:lines="1"
                android:layout_toEndOf="@+id/num_episode_indice"
                android:layout_alignBottom="@+id/num_episode_indice"/>


            <TextView
                android:id="@+id/title_episode_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:lines="1"
                android:ellipsize="end"
                android:text="@string/titre"
                android:layout_below="@+id/num_episode_indice"
                android:layout_margin="7dp"/>

            <TextView
                android:id="@+id/title_episode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_alignStart="@+id/pitch_episode"
                android:layout_alignBottom="@+id/title_episode_txt"
                android:layout_alignTop="@+id/title_episode_txt"
                android:layout_toEndOf="@+id/title_episode_txt"
                android:textColor="@color/white"/>


            <TextView
                android:id="@+id/pitch_episode_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:lines="1"
                android:ellipsize="end"
                android:text="@string/pitch"
                android:layout_below="@+id/title_episode_txt"
                android:layout_margin="7dp"/>

            <TextView
                android:id="@+id/pitch_episode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:lines="2"
                android:ellipsize="end"
                android:layout_toEndOf="@+id/pitch_episode_txt"
                android:layout_alignTop="@+id/pitch_episode_txt"
                android:layout_marginBottom="5dp"/>

        </RelativeLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>